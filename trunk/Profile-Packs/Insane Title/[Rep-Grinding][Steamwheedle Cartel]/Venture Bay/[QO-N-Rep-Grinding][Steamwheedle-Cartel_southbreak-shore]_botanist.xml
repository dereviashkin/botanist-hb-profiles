<HBProfile creator="Botanist" version="1.0">
	<Name>[QO-N-Rep-Grinding][Steamwheedle-Cartel_southbreak-shore]_botanist</Name>
   
	<MinLevel>85</MinLevel>
    <MaxLevel>115</MaxLevel>
   
	<MinDurability>-1</MinDurability>
	<MinFreeBagSlots>-1</MinFreeBagSlots>
	
	<MailGrey>False</MailGrey>
	<MailWhite>False</MailWhite>
	<MailGreen>False</MailGreen>
	<MailBlue>True</MailBlue>
	<MailPurple>True</MailPurple>
   
	<SellGrey>True</SellGrey>
	<SellWhite>True</SellWhite>
	<SellGreen>True</SellGreen>
	<SellBlue>False</SellBlue>
	<SellPurple>False</SellPurple>
   
	<TargetElites>True</TargetElites>
	
	<AvoidMobs>
	</AvoidMobs>
	
	<Blackspots>
	</Blackspots>

	<Mailboxes>
	</Mailboxes>
 
	<Vendors>
	</Vendors>

	<Factions>
	</Factions>
	
	<ProtectedItems>
	</ProtectedItems>
	
	<QuestOrder>

		<CustomBehavior File="UserSettings" 
						LootMobs="True" 
						HarvestHerbs="False" 
						HarvestMinerals="False" 
						PullDistance="25" 
						KillBetweenHotspots="True" 
						RessAtSpiritHealers="True" 
						LootRadius="50" 
						LogoutForInactivity="False" />

						
						
						
						
						
						
						
						
						
						
						
						
						
		<!-- If we are inside Lost City of the Tol'vir -->
		<If Condition="Me.MapId == 755">
		
			<!-- Profile message - The Lost City of the Tol'vir detected. Running out -->
			<CustomBehavior File="Message" 
							Text="The Lost City of the Tol'vir detected. Running out."
							LogColor="Cyan" />
				
			<!-- Move to - zone in location -->
			<MoveTo X="-10700.4" Y="-1312.69" Z="17.6029" />

			<!-- Custom behavior - Misc/InInstance - exit the instance-->
			<CustomBehavior File="Misc\InInstance" 
							X="-10684.97" Y="-1307.447" Z="17.64349" />
			
			<!-- Wait timer - wait 15 seconds - delay -->
			<CustomBehavior File="WaitTimer" 
							WaitTime="15000" />
			
			<!-- Move to - zone out location -->
			<MoveTo X="-10679.7" Y="-1307.1" Z="17.3427" />
			
		</If>	<!-- If we are inside Lost City of the Tol'vir -->				
						
		<!-- If we are in Kalimdor -->
		<If Condition="Me.MapId == 1" >
			
			<!-- Profile message  - We are in Kalimdor -->	
			<CustomBehavior File="Message" 
							Text="We are in Kalimdor." 
							LogColor="Orange" />

			<!-- Infinite loop -->
			<While Condition="true">
				
				<!-- If we are within 1000 of the farming area -->
				<If Condition="Me.Location.Distance(new WoWPoint(-8832.612, 255.7332, -21.77831)) &lt;= 1000 &amp;&amp; Me.Z &lt; -10" >
				
					<!-- Profile message - Moving to the farming location -->
					<CustomBehavior File="Message" 
									Text="Moving to the beginning of the route." 
									LogColor="Fuchsia" />
				
					<!-- Custom behavior - UserSettings -->
					<CustomBehavior File="UserSettings" 
								UseMount="True"  />
				
					<!-- Move to - farming location -->
					<MoveTo X="-8832.612" Y="255.7332" Z="-21.77831" />

					<!-- Custom behavior - ForcedDismount -->
					<CustomBehavior File="ForcedDismount" />
					
					<!-- Profile message  - Checking our coordinates -->
					<CustomBehavior File="Message" 
									Text="Checking our coordinates." 
									LogColor="Fuchsia" />

					<!-- Custom behavior - UserSettings -->
					<CustomBehavior File="UserSettings" 
								UseMount="False"  />				
									
					<!-- Custom behavior - RunMacro - cleartarget -->
					<CustomBehavior File="RunMacro" 
									Macro="/cleartarget" 
									NumOfTimes="1" 
									WaitTime="0"/>
					
					<!-- Profile message  - We have reached the farming area. We will farm this location until you stop the bot -->	
					<CustomBehavior File="Message" 
									Text="We have reached the farming area. We will farm this location until you stop the bot." 
									LogColor="Orange" />
					
					<!-- While our level >= 80 -->
					<While Condition="Me.Level &gt;= 80">
						
						<!-- Clear target -->					
						<CustomBehavior File="RunMacro" 
										Macro="/cleartarget"  
										WaitTime="0"/>
										
						<!-- If our empty bag slots > 4 and our lowest durability > 30 percent -->
						<If Condition="(Me.FreeBagSlots &gt; 4) &amp;&amp; (Me.LowestDurabilityPercent &gt; 0.3)" >
				
							<!-- Custom behavior - TargetAndMoveToMob - Schnottz Elite Trooper -->
							<CustomBehavior File="TargetAndMoveToMob"
											MoveWithinMaxRangeOfMob="3"
											TargetOnlyIfHealthPercentAbove="5"
											WaitForNpcs="False"
											TerminateWhen="Me.GotTarget &amp;&amp; Me.CurrentTarget.IsDead"
											MobId="48668" >			
							</CustomBehavior>	<!-- Custom behavior - TargetAndMoveToMob -->

							<!-- Else our empty bag slots < 4 or our lowest durability < 30 percent -->
							<Else>
													
								<!-- Load profile - [QO-N][Flying][Schnottz-Elite-Troopers]_repair-mail -->
								<CustomBehavior File="LoadProfile" 
												ProfileName="Movement\Vendors\[QO-N][Flying][Schnottz-Elite-Troopers]_repair-mail" />

							</Else>	<!-- Else our empty bag slots < 4 or our lowest durability < 30 percent -->
							
						</If>	<!-- If our empty bag slots > 4 and our lowest durability > 30 percent -->				

						<!-- If our target is a Schnottz Elite Trooper -->
						<If Condition="(Me.CurrentTarget != null) &amp;&amp; (Me.CurrentTarget.Entry == 48668)">
						
							<!-- Profile message  - Engaging a Schnottz Elite Trooper -->	
							<CustomBehavior File="Message" 
											Text="Engaging a Schnottz Elite Trooper." 
											LogColor="Cyan" />

							<!-- CustomBehavior - RunMacro - cast Mangle -->
							<CustomBehavior File="RunMacro" 
											Macro="/cast Mangle" />
							
							<!-- CustomBehavior - RunMacro - cast Moonfire -->
							<CustomBehavior File="RunMacro" 
											Macro="/cast Moonfire" />
											
							<!-- CustomBehavior - RunMacro - Auto Attack -->
							<CustomBehavior File="RunMacro" 
											Macro="/cast Auto Attack" />
											
							<!-- Wait timer - wait 1 seconds - delay -->
							<CustomBehavior File="WaitTimer" 
											WaitTime="1000" />

						</If>	<!-- If our target is a Schnottz Elite Trooper --> 
						
					</While> 	<!-- While our level >= 80 -->

					<!-- Else we are more than 1000	ards from the farming area -->
					<Else>
					
						<!-- Load profile - [QO-N-M-Rep-Grinding][Steamwheedle-Cartel_southbreak-shore]_botanist -->
						<CustomBehavior File="LoadProfile" 
										ProfileName="Movement\[QO-N-M-Rep-Grinding][Steamwheedle-Cartel_southbreak-shore]_botanist" />
						
					</Else>	<!-- Else we are more than 200 yards from the farming area -->
					
				</If>	<!-- If we are within 1000 of the farming area -->	
				
			</While> <!-- Infinite loop -->
			
		</If>	<!-- If we are in Kalimdor -->
		
	</QuestOrder>
	
</HBProfile>

