								<CustomBehavior File="Misc\InstanceTimer" Timer="Check" />
								
								<!-- Land in the box -->
								<CustomBehavior File="FlyTo" X="-363.436" Y="3078.43" Z="-15.00165" />
								<CustomBehavior File="ForcedDismount" />
								
								<RunTo X="-363.436" Y="3078.43" Z="-15.00165" />
														
