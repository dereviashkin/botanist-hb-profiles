						<!-- Make sure we run to the right spot outside the portal -->
						<RunTo X="-363.436" Y="3078.43" Z="-15.00165" />

						<!-- Run back in the portal -->
						<CustomBehavior File="Misc\InInstance" X="-364.514" Y="3088.31" Z="-15.02338" />
										
