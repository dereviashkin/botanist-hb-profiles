	<QuestOrder>
		<ClearVendor />
		<ClearMailbox />

		<!-- Level check -->
		<If Condition="Me.Level &gt;= 67">
			<CustomBehavior File="Message" 
							Text="You meet the level requirement to run this profile." 
							LogColor="Fuchsia" />
		
		 	<!-- UserSettings -->
			<CustomBehavior File="UserSettings"
							AdvancedSettingsMode="True"
							FindMountAutomatically="True"
							FindVendorsAutomatically="False"
							GroundMountFarmingMode="False"
							HarvestHerbs="False"
							HarvestMinerals="False"
							KillBetweenHotspots="True"
							LogoutForInactivity="False"
							LogoutInactivityUseForceQuit="False"
							LootChests="False"
							LootMobs="True"
							LootRadius="15"
							MountDistance="75"
							MountName=""
							NinjaSkin="False"
							ProfileDebuggingMode="False"
							PullDistance="10"
							RessAtSpiritHealers="False"
							SkinMobs="False"
							UseFlightPaths="True"
							UseMount="True" 
							UseRandomMount="False" />
							
			<!-- Infinite loop -->
			<While Condition="true" >
				<!-- BRS -->
				<If Condition="Me.ZoneId == 1583">
					<If Condition="Me.HearthstoneAreaId == 5628" >
						<CustomBehavior File="Message" 
										Text="Our Innkeeper is set at Iron Summit." 
										LogColor="Cyan" />
										
						<!-- Have hearthstone -->
						<If Condition="HasItem(6948)">
							<CustomBehavior File="Message" 
											Text="Using Hearthstone." 
											LogColor="Lime" />
											
							<CustomBehavior File="Misc\RunLua" 
											Lua="UseItemByName(6948)" 
											WaitTime="1000" />
											
							<CustomBehavior File="WaitTimer" 
											WaitTime="20000" />				
						</If> <!-- Have hearthstone -->
					
						<!-- Have Innkeeper's Daughter -->
						<If Condition="HasItem(64488)">
							<CustomBehavior File="Message" 
											Text="Using Innkeeper's Daughter." 
											LogColor="Lime" />
												
							<CustomBehavior File="Misc\RunLua" 
											Lua="UseItemByName(64488)" 
											WaitTime="1000" />
								
							<CustomBehavior File="WaitTimer" 
											WaitTime="20000" />
						</If> <!-- Have Innkeeper's Daughter -->
					</If> <!-- Hearth check -->
				</If> <!-- BRS -->		
			
				<!-- If we are inside -->
				<If Condition="Me.ZoneId == 3562">
					<CustomBehavior File="Message" 
									Text="Hellfire Ramparts detected. Running out."
									LogColor="Fuchsia" />
									
					<RunTo X="-1355.28" Y="1641.57" Z="68.274" />
					
					<!-- Go through the portal -->
					<CustomBehavior File="Misc\InInstance" X="-1358.403" Y="1629.539" Z="68.55495" />
					
					<!-- Make sure we run to the right spot outside the portal -->
					<RunTo X="-363.436" Y="3078.43" Z="-15.0013" />
				</If> <!-- HR -->
				
				<!-- If we are not in the box, load the movement profile -->
				<If Condition="Me.X &lt; -400 || Me.X &gt; -300 || Me.Y &lt; 3000 || Me.Y &gt; 3100" >
					<CustomBehavior File="Message" 
									Text="Distance from portal is not within our proximity, initializing movement to get there."
									LogColor="Fuchsia" />	
									
					<CustomBehavior File="LoadProfile" 
									ProfileName="Movement\[QO-N-M][Solstice][67-70]_hellfire-ramparts" />
				</If> <!-- Not in box -->
				
				<!-- If we are in the box -->
				<If Condition="Me.X &gt; -400 &amp;&amp; Me.X &lt; -300 &amp;&amp; Me.Y &gt; 3000 &amp;&amp; Me.Y &lt; 3100" >
					<CustomBehavior File="Message" 
									Text="Portal detected nearby."
									LogColor="Fuchsia" />	

					<!-- Resetting the instance -->
					<CustomBehavior File="Message" 
									Text="Resetting instance." 
									LogColor="Fuchsia" />
					
					<CustomBehavior File="RunMacro" Macro="/script ResetInstances()" />	
					<CustomBehavior File="RunMacro" Macro="/script SetDungeonDifficultyID(1)" />
					
					<CustomBehavior File="Message" 
									Text="Instance reset." 
									LogColor="Fuchsia" />
						
					<!-- If we didn't enter the instance, wait 20 seconds then attempt to enter again -->
					<While Condition="Me.ZoneId != 3562">
						<!-- Make sure we run to the right spot outside the portal -->
						<RunTo X="-363.436" Y="3078.43" Z="-15.00165" />

						<!-- Run back in the portal -->
						<CustomBehavior File="Misc\InInstance" X="-364.514" Y="3088.31" Z="-15.02338" />
										
						<CustomBehavior File="Message" 
										Text="Waiting for the dungeon to load." 
										LogColor="Fuchsia" />
									
						<CustomBehavior File="WaitTimer" 
										WaitTime="20000" 
										VariantTime="20000" />
										
						<!-- If we still aren't in, we're locked out -->
						<If Condition="Me.ZoneId != 3562">
							<CustomBehavior File="Message" 
											Text="We are locked out. Waiting and trying again." 
											LogColor="Fuchsia" />
						</If> <!-- Locked -->
					</While> <!-- While we aren't in the instance -->
				</If> <!-- In box -->
				
				<!-- If we are inside Hellfire Ramparts and have checked our reset -->
				<If Condition="Me.ZoneId == 3562">
		
					<!-- Entrance -->
					<RunTo X="-1355.28" Y="1641.57" Z="68.274" />
					
					<!-- If we are below level 68, we will clear to the first boss, Watchkeeper Gargolmar, then run out and reset -->
					<If Condition="Me.Level &lt; 68" >
					
						<!-- Profile message - If we are below level 68, we will clear to the first boss, Watchkeeper Gargolmar, then run out and reset -->
						<CustomBehavior File="Message" 
										Text="We are below level 68, we will clear to the first boss, Watchkeeper Gargolmar, then run out and reset." 
										LogColor="Fuchsia" />
					</If>
					
					<!-- We are above level 68, we will kill Watchkeeper Gargolmar, and all the trash on the second floor, then run out and reset -->
					<If Condition="Me.Level &gt;= 68" >
					
						<!-- Profile message - We are above level 68, we will kill Watchkeeper Gargolmar, and all the trash on the second floor, then run out and reset -->
						<CustomBehavior File="Message" 
										Text="We are above level 68, we will kill Watchkeeper Gargolmar, and all the trash on the second floor, then run out and reset." 
										LogColor="Fuchsia" />
					</If>
					
					<!-- Instance timer -->
					<CustomBehavior File="Misc\InstanceTimer" Timer="Start" />
					
					<CustomBehavior File="Message" 
									Text="Hellfire Ramparts initialized."  
									LogColor="Fuchsia" />
									
					<!-- Pull the first two bridge guards -->
					<RunTo X="-1328.626" Y="1658.497" Z="68.99782" />
					
					<!-- Run to the end of the bridge -->
					<RunTo X="-1276.491" Y="1671.906" Z="68.64146" />
										
					<!-- Pull the first group on the right after the bridge -->
					<RunTo X="-1277.047" Y="1657.461" Z="69.09747" />
																				
					<!-- Pull the second group on the left after the bridge -->
					<RunTo X="-1245.894" Y="1647.94" Z="67.55897" />

					<!-- Pull second group on the left after the bridge  -->
					<RunTo X="-1243.185" Y="1623.843" Z="68.50868" />
										
					<!-- Pull the second group on the right -->
					<RunTo X="-1253.4" Y="1591.96" Z="68.55814" />
					
					<!-- Pull the center group -->
					<Hotspot X="-1264.139" Y="1566.891" Z="68.64436" />
										
					<!-- Pull third group on the left after the bridge  -->
					<RunTo X="-1275.092" Y="1541.744" Z="68.56787" />
															
					<!-- Pull the third group on the right -->
					<RunTo X="-1276.361" Y="1563.736" Z="68.5933" />
					<RunTo X="-1293.089" Y="1530.273" Z="68.59075" />
					<RunTo X="-1277.7" Y="1501.062" Z="68.57021" />
					<RunTo X="-1284.042" Y="1489.25" Z="68.58755" />

					<!-- Pull the barrier group on the left -->
					<RunTo X="-1234.819" Y="1476.051" Z="68.55984" />
										
					<!-- Pull the group in front of the barrier -->		
					<CustomBehavior File="NoCombatMoveTo" X="-1187.759" Y="1476.556" Z="68.46307" />
															
					<!-- Pull the group at the door to the stairs -->	
					<CustomBehavior File="NoCombatMoveTo" X="-1205.454" Y="1534.658" Z="68.54165" />
															
					<!-- Pull the 1st group on the left backtracking -->
					<CustomBehavior File="NoCombatMoveTo" X="-1155.788" Y="1507.705" Z="68.41247" />

					<!-- Pull the 2nd group on the left backtracking -->
					<CustomBehavior File="NoCombatMoveTo" X="-1161.322" Y="1466.328" Z="68.41697" />

					<!-- Pull the 3rd group on the left backtracking -->
					<CustomBehavior File="NoCombatMoveTo" X="-1175.203" Y="1441.703" Z="68.41886" />

					<!-- Pull the 4th group on the left backtracking -->
					<CustomBehavior File="NoCombatMoveTo" X="-1195.087" Y="1436.823" Z="68.50004" />

					<!-- Run to first grp at the top of the stairs -->
					<RunTo X="-1240.5" Y="1565.219" Z="91.10129" />
										
					<!-- If we are on the second floor, continue -->
					<If Condition="Me.Z &gt; 75" >
						
						<!-- Pull the first group on the left-->
						<CustomBehavior File="NoCombatMoveTo" X="-1297.197" Y="1588.697" Z="91.77291" />
						
						<!-- Pull the second group on the left -->
						<CustomBehavior File="NoCombatMoveTo" X="-1312.995" Y="1612.319" Z="91.75178" />
						
						<!-- Pull the first group on the right-->
						<CustomBehavior File="NoCombatMoveTo" X="-1272.616" Y="1623.165" Z="91.68772" /> 
						
						<!-- Run to the center of the corridor leading to Omor the Unscarred -->
						<CustomBehavior File="NoCombatMoveTo" X="-1242.992" Y="1657.34" Z="92.66415" />
						
						<!-- Pull last two mobs before Omor the Unscarred -->
						<RunTo X="-1166.884" Y="1701.474" Z="91.45723" />
							
						<!-- Pull Omor the Unscarred -->
						<RunTo X="-1119.855" Y="1719.716" Z="89.42812" />
						
						<!-- Kill the last two mobs on the ledge -->	
						<RunTo X="-1338.467" Y="1675.37" Z="91.88944" />	
							
						<!-- Run to the ledge -->
						<RunTo X="-1313.274" Y="1650.739" Z="91.67419" />
						<RunTo X="-1317.109" Y="1649.491" Z="91.66763" />
						
						<!-- Jump off the ledge -->
						<CustomBehavior File="Misc\JumpForward" />
						
						<!-- Wait timer - wait 1 second -->
						<CustomBehavior File="WaitTimer" 
												WaitTime="1000" />
					
					</If>
					
					<!-- Run to the exit -->
					<RunTo X="-1346.896" Y="1651.415" Z="68.86491" />
									
					<!-- If we are high enough to go to the next instance, do so -->
					<CustomBehavior File="Misc\LoadProfileOn" 
									MinLevel="70" 
									ProfileName="[QO-N][Solstice][70-72]_mana-tombs.xml"  />
									
				</If> <!-- If we are inside Hellfire Ramparts -->
				
				<!-- If we are inside Hellfire Ramparts -->
				<If Condition="Me.ZoneId == 3562">
					<CustomBehavior File="Message" 
									Text="Hellfire Ramparts detected. Running out to reset."
									LogColor="Fuchsia" />
									
					<!-- Make our way to the exit -->					
					<RunTo X="-1355.28" Y="1641.57" Z="68.274" />
					
					<!-- Repair if necessary -->
					<If Condition="(Me.FreeBagSlots &lt;= 15) || (Me.LowestDurabilityPercent &lt;= 0.3)" >
					
						<!-- Profile message - Our durability is less than 30% or our bags are about full. Doing a vendor run -->
						<CustomBehavior File="Message" 
										Text="Our durability is less than 30% or our bags are about full. Doing a vendor run." 
										LogColor="Fuchsia" />
					
						<!-- If our hearthstone is set here, use it -->
						<If Condition="(Me.HearthstoneAreaId == 3538) || (Me.HearthstoneAreaId == 3536)">
							<CustomBehavior File="Message" 
											Text="Our Innkeeper is set at Honor Hold or Thrallmar." 
											LogColor="Cyan" />
												
							<!-- Have hearthstone -->
							<If Condition="HasItem(6948)">
								<CustomBehavior File="Message" 
												Text="Using Hearthstone." 
												LogColor="Lime" />
												
								<CustomBehavior File="Misc\RunLua" 
												Lua="UseItemByName(6948)" 
												WaitTime="1000" />
												
								<CustomBehavior File="WaitTimer" 
												WaitTime="20000" />
							</If> <!-- Have hearthstone -->
						
							<!-- Have Innkeeper's Daughter -->
							<If Condition="HasItem(64488)">
								<CustomBehavior File="Message" 
												Text="Using Innkeeper's Daughter." 
												LogColor="Lime" />
													
								<CustomBehavior File="Misc\RunLua" 
												Lua="UseItemByName(64488)" 
												WaitTime="1000" />
									
								<CustomBehavior File="WaitTimer" 
												WaitTime="20000" />
							</If> <!-- Have Innkeeper's Daughter -->
						
							<!-- If we are inside -->
							<If Condition="Me.ZoneId == 3562">
								<CustomBehavior File="Message" 
												Text="Hellfire Ramparts detected. Running out."
												LogColor="Fuchsia" />
												
								<RunTo X="-1355.28" Y="1641.57" Z="68.274" />
								
								<!-- Go through the portal -->
								<CustomBehavior File="Misc\InInstance" X="-1358.403" Y="1629.539" Z="68.55495" />
								
								<!-- Make sure we run to the right spot outside the portal -->
								<RunTo X="-363.436" Y="3078.43" Z="-15.0013" />
							</If> <!-- HR -->
							
							<If Condition="Me.IsAlliance">
								<CustomBehavior File="FlyTo" X="-709.473" Y="2621.555" Z="89.7064" />
								<CustomBehavior File="ForcedDismount" />
							</If>
							
							<If Condition="Me.IsHorde">
								<RunTo X="183.0796" Y="2606.334" Z="87.28376" />
							</If>
										
							<CustomBehavior File="ForceSetVendor" 
											DoMail="True" 
											DoRepair="True" 
											DoSell="False" 
											DoTrain="False" />
							
							<SetVendor>
								<Vendors>
									<!-- Honor Hold -->
									<Vendor Name="Humphry"
											Entry="16823" 
											Type="Repair" 
											X="-717.3172" Y="2607.582" Z="91.01124" />
											
									<!-- Thrallmar -->
									<Vendor Name="Reagan Mancuso" 
											Entry="22225" 
											Type="Repair" 
											X="179.7871" Y="2605.4" Z="87.28391" />
								</Vendors>
							</SetVendor>
						
							<SetMailbox>
								<Mailboxes>
									<!-- Honor Hold -->
									<Mailbox X="-706.4096" Y="2697.286" Z="94.34798" />
									
									<!-- Thrallmar -->
									<Mailbox X="171.8167" Y="2626.572" Z="87.07685" />
								</Mailboxes>
							</SetMailbox>
							
							<!-- We are done repairing -->
							<If Condition="(Me.FreeBagSlots &gt; 15) &amp;&amp; (Me.LowestDurabilityPercent &gt; 0.3)" >
								<CustomBehavior File="Message" 
												Text="Repairing complete." 
												LogColor="Fuchsia" />
												
							</If> <!-- repaired -->
							
							<If Condition="Me.IsAlliance">
							
								<!-- Fly to the hover point above the innkeep in Honor Hold -->
								<CustomBehavior File="FlyTo" X="-699.7803" Y="2654.424" Z="153.3082" />
								
							</If>
							
							<If Condition="Me.IsHorde">
							
								<!-- Fly to the hover point above the innkeep in Thrallmar -->
								<CustomBehavior File="FlyTo" X="167.4147" Y="2645.637" Z="115.6988" />
								
							</If>
							
								<CustomBehavior File="Message" 
								Text="Flying to Hellfire Ramparts." 
								LogColor="Lime" />
								
								<!-- Fly above hellfire ramparts -->
								<CustomBehavior File="FlyTo" X="-334.9235" Y="3018.459" Z="37.46231" />

								<!-- Instance timer check if we did repair -->
								<CustomBehavior File="Misc\InstanceTimer" Timer="Check" />
								
								<!-- Land in the box -->
								<CustomBehavior File="FlyTo" X="-363.436" Y="3078.43" Z="-15.00165" />
								<CustomBehavior File="ForcedDismount" />
								
								<RunTo X="-363.436" Y="3078.43" Z="-15.00165" />
														
						</If>	<!-- If our hearthstone is set here, use it -->
					</If> <!-- Repair if necessary -->
				</If>	<!-- If we are inside Hellfire Ramparts -->
				
				<!-- If we don't need to vendor -->
				<If Condition="Me.ZoneId == 3562">
				
					<CustomBehavior File="Message" 
									Text="Hellfire Ramparts detected. Running out to reset."
									LogColor="Fuchsia" />
				
					<!-- Instance timer check if we didn't repair -->
					<CustomBehavior File="Misc\InstanceTimer" Timer="Check" />
									
					<RunTo X="-1355.28" Y="1641.57" Z="68.274" />
					
					<!-- Go through the portal -->
					<CustomBehavior File="Misc\InInstance" X="-1358.403" Y="1629.539" Z="68.55495" />
					
					<!-- Make sure we run to the right spot outside the portal -->
					<RunTo X="-363.436" Y="3078.43" Z="-15.0013" />
					
				</If> <!-- If we don't need to vendor -->
			</While> <!-- Infinite loop -->
		</If> <!-- Level Check -->
		
				
		
	</QuestOrder>
</HBProfile>

