							<CustomBehavior File="Misc\JumpForward" />
							
							<!-- Wait timer - wait 1 second -->
							<CustomBehavior File="WaitTimer" 
													WaitTime="1000" />
						
						</If>
					</If>
					
					<!-- Run to the exit -->
					<RunTo X="-1346.896" Y="1651.415" Z="68.86491" />
									
					<!-- If we are high enough to go to the next instance, do so -->
					<CustomBehavior File="Misc\LoadProfileOn" 
									MinLevel="70" 
									ProfileName="[QO-N][Solstice][70-72]_mana-tombs.xml"  />
									
				</If> <!-- If we are inside Hellfire Ramparts -->
				
				<!-- If we are inside Hellfire Ramparts -->
				<If Condition="Me.ZoneId == 3562">
					<CustomBehavior File="Message" 
									Text="Hellfire Ramparts detected. Running out to reset."
									LogColor="Fuchsia" />
									
