					<!-- UserSettings - usemount - true -->
					<CustomBehavior File="UserSettings"
									UseMount="True" />
					
					<!-- Fly to the Iron Summit - hover point -->
					<CustomBehavior File="FlyTo" 
									X="-7155.026" Y="-1241.06" Z="330.1496" />
		
				</If>	<!-- If we are Horde -->
		
